<Window x:Class="View.MenuGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MenuGameWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/pic.png"  Stretch="UniformToFill" Opacity="0.35"/>
        </Grid.Background>
        <!-- Define two columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left GroupBox for Labels and RadioButtons -->
        <GroupBox Header="Options" Margin="10" Grid.Column="0" FontSize="32">
            <!-- Center the elements horizontally and vertically -->
            <Grid>
                <!-- Define RowDefinitions -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Define ColumnDefinitions -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Labels -->
                <Label Content="Number of players:" Grid.Row="0" Grid.Column="0" Margin="5,40,5,40" FontSize="18" HorizontalAlignment="Right" VerticalContentAlignment="Center" Background="White" BorderBrush="Black" BorderThickness="2"/>
                <Label Content="Game mode:" Grid.Row="1" Grid.Column="0" Margin="5,40,5,40" FontSize="18" HorizontalAlignment="Right" VerticalContentAlignment="Center" Background="White" BorderBrush="Black" BorderThickness="2"/>
                <Label Content="Number of wins:" Grid.Row="2" Grid.Column="0" Margin="5,40,5,40" FontSize="18" HorizontalAlignment="Right" VerticalContentAlignment="Center" Background="White" BorderBrush="Black" BorderThickness="2"/>

                <!-- RadioButtons -->
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center" Background="White">
                    <RadioButton Content="2" GroupName="NumberOfPlayers" IsEnabled="True" FontSize="18" VerticalContentAlignment="Center"  Command="{Binding NumberOfPlayersCommand}" CommandParameter="2" IsChecked="True"/>
                    <RadioButton Content="3" GroupName="NumberOfPlayers" IsEnabled="True" FontSize="18" VerticalContentAlignment="Center"  Command="{Binding NumberOfPlayersCommand}" CommandParameter="3"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center" Background="White">
                    <RadioButton Content="easy" GroupName="GameMode" IsEnabled="True" FontSize="18" VerticalContentAlignment="Center"  Command="{Binding MapSchemaCommand}" CommandParameter="1" IsChecked="True"/>
                    <RadioButton Content="normal" GroupName="GameMode" IsEnabled="True" FontSize="18" VerticalContentAlignment="Center"  Command="{Binding MapSchemaCommand}" CommandParameter="2"/>
                    <RadioButton Content="hard" GroupName="GameMode" IsEnabled="True" FontSize="18" VerticalContentAlignment="Center"  Command="{Binding MapSchemaCommand}" CommandParameter="3"/>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center" Background="White">
                    <RadioButton Content="1" IsEnabled="True" FontSize="18" VerticalContentAlignment="Center" Command="{Binding NumberOfWinsCommand}" CommandParameter="1" IsChecked="True"/>
                    <RadioButton Content="2" IsEnabled="True" FontSize="18" VerticalContentAlignment="Center" Command="{Binding NumberOfWinsCommand}" CommandParameter="2"/>
                    <RadioButton Content="3" IsEnabled="True" FontSize="18" VerticalContentAlignment="Center" Command="{Binding NumberOfWinsCommand}" CommandParameter="3"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Right GroupBox for Buttons -->
        <GroupBox Header="Menu" Margin="10" Grid.Column="1" FontSize="32">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="New game" Margin="5" FontSize="24" BorderBrush="Black" BorderThickness="2" Command="{Binding NewGameCommand}"/>
                <Button Content="Load" Margin="5" FontSize="24" BorderBrush="Black" BorderThickness="2" Command="{Binding LoadGameCommand}"/>
                <Button Content="Tutorial" Margin="5" IsEnabled="True" FontSize="24" BorderBrush="Black" BorderThickness="2" Command="{Binding MonsterTutorialCommand}"/>
                <Button Content="Exit" Margin="5" FontSize="24" BorderBrush="Black" BorderThickness="2" Command="{Binding ExitCommand}"/>
                </StackPanel>
            </GroupBox>
        </Grid>
</Window>
